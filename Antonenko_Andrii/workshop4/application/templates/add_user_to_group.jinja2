{% extends "layout.jinja2" %}

{% block content %}
    <div class="container">
        <h1>Workshop 4(Add user to group)</h1>
        <nav>
            <a href="http://localhost:5000/user">Users</a>
            <a href="http://localhost:5000/group">Groups</a>
        </nav>
        <h4>Add user to group</h4>
        <form action="" method="post">
            <p>
                {{ form.user_email.label }} <br>
                {{ form.user_email(size=32) }}
            </p>
            <p>
                {{ form.group_name.label }} <br>
                {{ form.group_name(size=32) }}
            </p>
            <p>
                {{ form.role.label }} <br>
                {{ form.role(size=32) }}
            </p>
            <p>{{ form.submit() }}</p>
        </form>
    </div>
{% endblock %}
